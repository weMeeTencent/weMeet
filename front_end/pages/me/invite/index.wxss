.invite-root {
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;  
  justify-content:flex-start;
  color: #353535;
  background: #ffffff;
  border: 1px solid #E6E6E6;
  padding: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.invite-corner {
  display: flex;
  justify-content: space-between;
}
.invite-corner-footer {
  display: flex;
  justify-content: space-between;
}
.img-corner {
  display: flex;
  width:  120rpx;
  height: 120rpx;
}

.content {
  flex: 1;
}
.invite-invite-text {
  display: flex;
  justify-content:center;
  font-size:  70rpx;
  margin-top: -30rpx;
}

.img-view {
  display: flex;
  justify-content:center;
  margin-top: 80rpx;
}

.img-invite {
  display: flex;
  justify-content:center;
  width:  140rpx;
  height: 140rpx;
  border-radius: 100%;
}

.invite-nickname {
  margin-top: 22rpx;
  font-family: PingFangSC-Regular;
  font-size: 48rpx;
  color: #4A4A4A;
  display: flex;
  justify-content:center;
}

.invite-gender {
  margin-top: 14rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #B2B2B2;
  display: flex;
  justify-content:center;
}

.invite-title {
  font-family: PingFangSC-Semibold;
  margin-top: 80rpx;
  font-size: 55rpx;
  line-height: 55rpx;
  color: #000000;
  display: flex;
  justify-content:center;
}

.invite-detail-1 {
  display: flex;
  justify-content: left;
  align-items: center;
  margin: 60rpx 50rpx 0 50rpx;
}

.invite-detail-2 {
  display: flex;
  justify-content: left;
  align-items: center;
  margin: 30rpx 50rpx 0 50rpx;
}

.img-detail {
  width:  25rpx;
  height: 25rpx;
  margin-right:20rpx;
}
.invite-detail-text {
  color: #4A4A4A;
  line-height: 20px;
  flex: 1;
}

