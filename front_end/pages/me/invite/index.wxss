.invite-root {
  font-family: PingFangSC-Regular;
  height: 100%;
  display: flex;
  flex-direction: column;  
  justify-content:flex-start;
  color: #353535;
  background: #ffffff;
  border: 1px solid #E6E6E6;
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.invite-corner {
  display: flex;
  justify-content: space-between;
}

.img-corner {
  display: flex;
  margin-top: 10rpx;
  width:  120rpx;
  height: 120rpx;
}

.invite-invite-text {
  display: flex;
  justify-content:center;
  font-size:  70rpx;
  margin-top: -30rpx;
}

.img-view {
  display: flex;
  justify-content:center;
  margin-top: 50rpx;
}

.img-invite {
  display: flex;
  justify-content:center;
  width:  140rpx;
  height: 140rpx;
}

.invite-nickname {
  margin-top: 22rpx;
  font-family: PingFangSC-Regular;
  font-size: 48rpx;
  color: #4A4A4A;
  display: flex;
  justify-content:center;
}

.invite-gender {
  margin-top: 14rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #B2B2B2;
  display: flex;
  justify-content:center;
}

.invite-title {
  font-family: PingFangSC-Semibold;
  margin-top: 80rpx;
  font-size: 55rpx;
  line-height: 55rpx;
  color: #000000;
  display: flex;
  justify-content:center;
}

.invite-detail-1 {
  margin-top:80rpx;
  display: flex;
  justify-content: left;
  flex-direction: row;
}

.invite-detail-2 {
  margin-top:30rpx;
  display: flex;
  justify-content: left;
  flex-direction: row;
}

.img-detail {
  display: flex;
  margin-top: 9rpx;
  margin-left:100rpx;
  justify-content:center;
  width:  25rpx;
  height: 25rpx;
}
.invite-detail-text {
  margin-left:20rpx;
  display: flex;
  justify-content:left;
  color: #4A4A4A;
  line-height: 20px;
  width: 500rpx;
}

.invite-corner-footer {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}