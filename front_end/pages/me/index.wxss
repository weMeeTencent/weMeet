/* pages/mine/index.wxss */
.me-root {
  font-family: PingFangSC-Regular;
  height: 100%;
  color: #353535;
  background: #f6f6f6;
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  padding-bottom: 26rpx;
}

.card {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  justify-content: left;
  align-items: left;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.card-1 {
  height: 170rpx;
  display: flex;
  justify-content: left;
  align-items: left;
}

.card-2{
  height: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  justify-content: left;
  align-items: left;
  width: 72%;
  margin-left: 25rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.img-more {
  display: flex;
  margin-top: 70rpx;
  margin-right: 10rpx;
  width: 41rpx;
  height: 10rpx;
}

.card-content-first {
  display: flex;
  flex-direction:row;
  width: 100%;
  height: 60%;
  justify-content: left;
  align-items: left;
}

.card-title {
  font-size: 46rpx;
  color: #000000;
  line-height: 80rpx;
}

.card-mine {
  background-color: #3875FF;
  font-size: 28rpx;
  justify-content: center;
  margin-left: 15rpx;
  margin-top: 25rpx;
  padding-right: 5rpx;
  color: #ffffff;
  line-height: 31rpx;
}

.card-info {
  font-size: 32rpx;
  color: #b2b2b2;
  line-height: 32rpx;
  width: 750rpx;
  margin-top: 15rpx;
}

.img-choice-eye {
  margin-top: 5rpx;
  margin-left: 40rpx;
  margin-right: 15rpx;
  width: 48rpx;
  height: 35rpx;
}

.img-choice {
  margin-top: 5rpx;
  margin-right: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.card-choice-text {
  width: 25%;
  height: 30rpx;
  font-size: 30rpx;
  color: #000000;
}

.divider{
  width: 100%;
  border: 1rpx solid #9b9b9b;
  border-bottom: 0rpx;
  border-left: 0rpx;
  border-right: 0rpx;
  margin-bottom: 8rpx;
}



