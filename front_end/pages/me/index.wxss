/* pages/mine/index.wxss */
.me-root {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #353535;
  background: #f6f6f6;
  padding: 0 40rpx;
  box-sizing: border-box;
  padding-bottom: 26rpx;
}

.card {
  height: 150rpx;
  display: flex;
  justify-content: left;
  align-items: left;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.card-content {
  display: flex;
  flex-direction:column;
  justify-content: left;
  align-items: left;
  width: 80%;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}

.img-more {
  display: flex;
  margin-top: 50rpx;
  width: 82rpx;
  height: 20rpx;
}

.card-content-first {
  display: flex;
  flex-direction:row;
  width: 100%;
  height: 60%;
  justify-content: left;
  align-items: left;
}

.card-title {
  font-size: 42rpx;
  color: #000000;
  line-height: 80rpx;
}

.card-mine {
  background-color: #66ccff;
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
  color: #ffffff;
  width: 90rpx;
  height: 40rpx;
}

.card-info {
  font-size: 25rpx;
  color: #b2b2b2;
  line-height: 30rpx;
  width: 750rpx;
}



