/**index.wxss**/

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-section {
  display: flex;
  background-color: #fff;
  justify-content: left;
  align-items: left;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.weui-cells__title {
  margin-top: 0.77em;
  margin-bottom: 0.3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999;
  font-size: 14px;
}

.weui-cells_after-title {
  margin-top: 0;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.main {
  position: absolute;
  background: #f8f8f8;
  height: 100%;
  width: 100%;
}

.label_container {
  float: right;
  display: flex;
  flex-direction: column;
  position: absolute;
  z-index: 999999;
  margin-left: 100rpx;
  margin-top: 130rpx;
}

.label1 {
  width: 50rpx;
  height: 150rpx;
}

.label_2 {
  /* background-image: url("../../../res/left_label_body.png"); */
  background-size: 50rpx 150rpx;
  background-repeat: repeat-y;
  width: 50rpx;
  /* height: 150rpx;  */
}

.label_text {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #888;
  width: 20rpx;
  text-align: center;
  margin: 0 auto;
}

.label_3 {
  width: 50rpx;
  height: 30rpx;
}

.maincontainer {
  border: 7rpx solid #1d1d1d;
  width: 669rpx;
  height: 870rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin: 0rpx auto 0 auto;
  margin-top: 30rpx;
}

.topDivider {
  background: #303030;
  width: 669rpx;
  height: 99rpx;
}

.topSlimDivider1 {
  border: 2rpx solid #979797;
  border-left: 0rpx;
  border-right: 0rpx;
  width: 669rpx;
  height: 6rpx;
  margin-top: 7rpx;
}

.topslogan {
  font-family: PingFangSC-Semibold;
  font-size: 18rpx;
  color: #9b9b9b;
  letter-spacing: 0;
  text-align: center;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.slogandivider {
  border: 1rpx dotted #9b9b9b;
  border-bottom: 0rpx;
  border-left: 0rpx;
  border-right: 0rpx;
  border-style: dotted;
  width: 669rpx;
}

.time_date {
  font-family: DINAlternate-Bold;
  font-size: 48rpx;
  color: #000;
  text-align: center;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  margin-top: 51rpx;
}

.time_week {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #888;
  text-align: center;
  line-height: 48rpx;
  margin-top: 11rpx;
}

.circle_container {
  margin-top: 48rpx;
  text-align: center;
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.center_icon {
  margin-top: 48rpx;
  width: 180rpx;
  height: 180rpx;
}

.recommend {
  font-family: PingFangSC-Semibold;
  font-size: 48rpx;
  color: #000;
  text-align: center;
  font-weight: bold;
  margin-top: 50rpx;
}

.description {
  border: 8rpx solid #979797;
  border-right: 0rpx;
  border-top: 0rpx;
  border-bottom: 0;
  padding-left: 19rpx;
  margin-top: 38rpx;
  width: 250rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #888;
  line-height: 36rpx;
}

.share {
  width: 100rpx;
  height: 100rpx;
  align-self: flex-end;
}

.callButton {
  background: #3875ff;
  border: 4rpx solid rgba(5, 5, 5, 0.08);
  border-radius: 10rpx;
  width: 669rpx;
  margin: 20rpx auto 0 auto;
  padding: 20rpx 0rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
}

.drop_up_container {
  margin-top: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.drop_up {
  width: 26rpx;
  height: 6rpx;
}

.drop_up_text {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #b2b2b2;
  text-align: center;
  margin-top: 6rpx;
}



.tempcontainer {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 20rpx;
}

.button {
  height: 50rpx;
  font-size: 20rpx;
}
