  <view class="label_container">
    <image class="label1" src="../../../res/left_label_head.png"></image>
    <image class="label_3" src="../../../res/left_label_body.png"></image>
  </view>
  <view class="maincontainer">
    <image class="topDivider" src="../../../res/main_header_block.png"></image>
    <view class="topSlimDivider1"></view>
    <view class="topslogan">
      <text>WE MEET · MEET LOVE</text>
    </view>
    <view class="slogandivider"></view>
    <view class="time_date">
      <text>2018年5月21日</text>
    </view>
    <view class="time_week">
      <text>星期一 戊戌年四月初七</text>
    </view>
    <image class="center_icon" src="../../../res/center_icon.png"></image>
